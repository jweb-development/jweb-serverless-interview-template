{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Lambdas",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/serverless/bin/serverless",
      "args": [
        "offline",
        "start",
        "--lazy"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "smartStep": true,
      "protocol": "inspector",
      "internalConsoleOptions": "openOnFirstSessionStart",
      "console": "integratedTerminal"
    }
  ]
}